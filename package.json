{
  "name": "@square/tpl-oss-js",
  "version": "1.0.0",
  "description": "Template for new JavaScript open source projects",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "lint": "npm-run-all --serial lint:*",
    "lint:eslint": "eslint --ignore-path .gitignore --cache .",
    "lint:prettier": "prettier --ignore-path .gitignore --check .",
    "lint:prettier:fix": "prettier --ignore-path .gitignore --write .",
    "test": "npm-run-all --serial lint test:*",
    "test:unit": "echo 'ðŸ”œ'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/square/tpl-oss-js.git"
  },
  "keywords": [
    "template"
  ],
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/square/tpl-oss-js/issues"
  },
  "homepage": "https://github.com/square/tpl-oss-js#readme",
  "devDependencies": {
    "@square/prettier-config": "^1.0.0",
    "eslint": "^7.21.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-square": "^17.0.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1"
  },
  "prettier": "@square/prettier-config",
  "eslintConfig": {
    "plugins": [
      "square"
    ],
    "extends": [
      "plugin:square/typescript"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{json,md,yml}": "prettier --write"
  }
}
